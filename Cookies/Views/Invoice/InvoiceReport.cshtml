
@{
    ViewData["Title"] = "InvoiceReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item active"><a href="/Invoice/InvoiceReport">Invoice Report</a></li>
    </ol>
</nav>
<div class="Pallet-fluid">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Customer</label>
                        <select id="customer" class="form-control" asp-items="@(new SelectList(ViewBag.Customers,"c_id","c_name"))">
                            <option value="">All</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Report Type</label>
                        <select id="type" class="form-control">
                            <option value="Consolidated">Consolidated</option>
                            <option value="Detail">Detail</option>
                            <option value="Customer">Customer Wise</option>
                            <option value="User">User Wise</option>
                            <option value="Product">Product Wise</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Product</label>
                        <select id="product" class="form-control" asp-items="@(new SelectList(ViewBag.Products,"p_id","p_name"))">
                            <option value="">All</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group right-pull">
                        <label class="control-label">Full History</label>
                        <br />
                        <label class="switch">
                            <input type="checkbox" name="fullhistory" id="fullhistory" value="See Full History" onchange="HideDateRangeForReport()">
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>
                <div class="col-md-2" id="ReportDateFilter">
                    <div class="form-group">

                        <label class="control-label">Date Range</label>
                        <input id="reportrange" class="form-control" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%" />

                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group bottom" align="justify">
                        <input type="button" onclick="getInvoiceReport();" style="margin-top:25px" class="btn btn-primary" value="Search" />
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12" id="Container">

                </div>
            </div>
        </div>
    </div>
</div>



