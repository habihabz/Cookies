@model IEnumerable<Cookies.Models.List_SalesOrderDetail>

@{
    Layout = null;
}


<table class="table table-hover text-nowrap" id="table3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.sod_prod_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sod_price_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sod_qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sod_unit_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sod_total_price)
            </th>
            
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sod_prod_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sod_price_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sod_qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sod_unit_price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sod_total_price)
                </td>

            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="bg-default  text-secondary">
            <td></td>
            <td>Total</td>
            <td>0</td>
            <td>0.00</td>
            <td>0.00</td>
        </tr>
    </tfoot>
</table>
